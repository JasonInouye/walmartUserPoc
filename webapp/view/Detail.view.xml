<mvc:View
    controllerName="com.walmart.walmart.user.poc.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="detailPage" title="Edit User" showNavButton="true" navButtonPress=".onNavBack">
        <content>
            <VBox id="detailVBox" class="sapUiSmallMargin">
                <Label id="usernameLabel" text="Username"/>
                <Input id="usernameInput" value="{username}" editable="false"/>

                <Label id="nameLabel" text="Name"/>
                <Input id="nameInput" value="{name}"/>

                <Label id="phoneLabel" text="Phone Number"/>
                <Input id="phoneInput" value="{phone}"/>

                <Label id="emailLabel" text="Email"/>
                <Input id="emailInput" value="{email}"/>

                <Label id="carrierIdLabel" text="Carrier ID"/>
                <Input id="carrierIdInput" value="{carrierId}"/>

                <Label id="typeLabel" text="Type"/>
                <Input id="typeInput" value="{type}"/>
            </VBox>
        </content>
        <footer>
            <Toolbar id="detailToolbar">
                <ToolbarSpacer id="detailSpacer"/>
                <Button id="saveButton" text="Save" type="Emphasized" press=".onSave"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>